= render "shared/flash", flash: flash
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = devise_error_messages!
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons email
    =f.email_field :email, {class:"form-control", placeholder: I18n.t(".form_email"), autofocus: true}
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons lock_outline
    =f.password_field :password, {class:"form-control", placeholder: I18n.t(".form_password") }
  - if devise_mapping.rememberable?
    .input-group.padding-group.text-center
      %span.input-group-addon
        = f.check_box :remember_me
        = f.label :"#{I18n.t(".remember_me")}"
  .footer.text-center
    = f.submit I18n.t(".log_in"), {class:"btn btn-simple btn-primary btn-lg"}

