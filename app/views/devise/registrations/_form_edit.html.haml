= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons face
    =f.text_field :name, {class:"form-control", placeholder: "Your Name...", autofocus: true}
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons email
    =f.email_field :email, {class:"form-control", placeholder:"Your Email..."}
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons lock_outline
    =f.password_field :password, {class:"form-control", placeholder:"Your New password...", autocomplete: "off"}
    - if @minimum_password_length
      %br/
      %em
        = @minimum_password_length
        characters minimum
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons lock_outline
    =f.password_field :password_confirmation, {class:"form-control", placeholder: "Your New Password..."}
  
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons add_a_photo
    =f.file_field :avatar, {class:"form-control"} 
    %i (Avatar)
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons add_a_photo
    =f.file_field :wallpaper, {class:"form-control"} 
    %i (Wallpaper)
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons lock_outline
    =f.password_field :current_password, {class:"form-control", placeholder: "Your Current Password..."}    
    %i (we need your current password to confirm your changes)
  .actions.text-center
    = f.submit "Update", {class:"btn btn-simple btn-primary btn-lg"}