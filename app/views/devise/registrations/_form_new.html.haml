= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons face
    =f.text_field :name, {class:"form-control", placeholder: "Your Name...", autofocus: true}
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons email
    =f.email_field :email, {class:"form-control", placeholder:"Your Email..."}
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons lock_outline
    =f.password_field :password, {class:"form-control", placeholder: "Your Password..."}
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons lock_outline
    =f.password_field :password_confirmation, {class:"form-control", placeholder: "Your Password..."}
  .footer.text-center
    = f.submit "Sign up", {class:"btn btn-simple btn-primary btn-lg"}

