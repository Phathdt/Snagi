= form_for [@user,@album], :html => { multipart: true } do |f|
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons label
    =f.text_field :title, {class:"form-control", placeholder: I18n.t(".form_title") , autofocus: true}
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons info
    =f.text_field :description, {class:"form-control", placeholder: I18n.t(".form_description") }
  .input-group.padding-group
    %span.input-group-addon
      %i.material-icons attachment
      .controls
        = file_field_tag "images[]",type: :file, multiple: true
  .actions.text-center
    - if params[:action] == "new"
      = f.submit I18n.t(".create") , {class:"btn btn-simple btn-primary btn-lg"}
    - else
      = f.submit I18n.t(".update"), {class:"btn btn-simple btn-primary btn-lg"}
