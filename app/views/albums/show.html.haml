/- wallpaper = @user.wallpaper == nil ? 'city.jpg' : @user.wallpaper.url

= render "shared/wallpaper_profile", url: 'wallpaper.jpg'
.main.main-raised
  .profile-content
    .container
      .row
        .profile
          = render 'shared/avatar' , user: @user
          .name.text-center
            %h3.title= @user.name
            - level = @user.is_admin? ? Admin : "Normal User"
            %h6= level
            %h6= @album.title
            %h6= "#{@album.followed_users.count} followers #{@album.liked_users.count} Likes"
            - if user_signed_in?
              .btn.btn-simple.btn-primary.btn-lg= link_to 'Follow', follow_user_album_path(@current_user,@album), method: :post
              .btn.btn-simple.btn-primary.btn-lg= link_to 'Like', like_user_album_path(@current_user,@album), method: :post
              - if current_user.is_admin? || current_user.id = params[:user_id]
                .btn.btn-simple.btn-primary.btn-lg= link_to 'Edit', edit_user_album_path(@user,@album)
                .btn.btn-simple.btn-primary.btn-lg= link_to 'Private', set_private_user_album_path(@current_user,@album), method: :post  
                .btn.btn-simple.btn-primary.btn-lg= link_to 'Destroy', [@user,@album], method: :delete, data: { confirm: 'Are you sure?' }
      .description.text-center
        %p= @album.description
      .row
        - @pictures.each do |picture|
          .col-md-4
            = render 'shared/picture', picture: picture
        .text-center
	

